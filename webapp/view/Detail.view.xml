<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="SKE.UI5Skeleton.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>DetailTitle}"
			      showNavButton="true"
			      navButtonPress="handleNavButtonPress" >
				<content>
					<ObjectHeader title="{purchaseOrder}">
						<attributes>
							<ObjectAttribute text="Order {purchaseOrder}" />
							<ObjectAttribute text="Organisation {purchaseOrganisation}" />
							<ObjectAttribute text="Date {purchaseDate}" />
						</attributes>						
					</ObjectHeader>				
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>